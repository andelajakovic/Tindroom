<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.postlogin.MyProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/avatar_placeholder"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/changeProfilePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/linear_layout_margin"
        android:text="@string/my_profile_fragment_change_profile_picture_label"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/linear_layout_margin"
            android:textSize="24sp"
            android:fontFamily="sans-serif-black"
            tools:text="Maja"/>

        <TextView
            android:id="@+id/faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            tools:text="Sveučilište u Rijeci"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/linear_layout_margin">

            <ImageButton
                android:id="@+id/safetyButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/white_button_selector"
                android:src="@drawable/privacy_icon_gray" />

            <TextView
                android:id="@+id/safetyLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Safety"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/safetyButton"
                app:layout_constraintStart_toStartOf="@+id/safetyButton"
                app:layout_constraintTop_toBottomOf="@+id/safetyButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/linear_layout_margin">

            <ImageButton
                android:id="@+id/editProfileButton"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/white_button_selector"
                android:src="@drawable/edit_icon_gray" />

            <TextView
                android:id="@+id/editProfileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_profile_fragment_edit_profile_label"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/editProfileButton"
                app:layout_constraintStart_toStartOf="@+id/editProfileButton"
                app:layout_constraintTop_toBottomOf="@+id/editProfileButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/linear_layout_margin">

            <ImageButton
                android:id="@+id/logoutButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/white_button_selector"
                android:src="@drawable/logout_icon_gray" />

            <TextView
                android:id="@+id/logoutLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/my_profile_fragment_logout_label"
                android:textAllCaps="true"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/logoutButton"
                app:layout_constraintStart_toStartOf="@+id/logoutButton"
                app:layout_constraintTop_toBottomOf="@+id/logoutButton" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>